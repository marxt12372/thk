@model IEnumerable<Jalgrattaeksam.Models.Eksamineeritavad>

@{
    ViewBag.Title = "Teooriaeksam";
}

<h2>Teooriaeksam</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Eesnimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perenimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teooriaeksam)
        </th>
        <th></th>
    </tr>

@foreach(var item in Model)
{
	using(Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		@Html.HiddenFor(id => item.Id)
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Eesnimi)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Perenimi)
			</td>
			<td>
				@Html.EditorFor(modelItem => item.Teooriaeksam, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(modelItem => item.Teooriaeksam, "", new { @class = "text-danger" })
			</td>
			<td>
				<input type="submit" value="Salvesta" class="btn btn-default" />
			</td>
		</tr>
	}
}

</table>
